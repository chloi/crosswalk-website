<!DOCTYPE html>
<html id="top" lang="en-us">
  <head>
    <meta charset="utf-8">
    <title>Intel Crosswalk</title>
    <script>
      WebFontConfig = {
        google: {
          families: ['Source Code Pro:n4,n6']
        },
        custom: {
          families: ['Clear Sans'],
          urls: ['/css/fonts.css']
        },
        timeout: 2000
      };
    </script>
    <script async defer src="//ajax.googleapis.com/ajax/libs/webfont/1.5.3/webfont.js"></script>
    <link rel="stylesheet" href="/css/main.css">

    <meta name="description", content="<%= description %>" />
    <meta name="author", content="<%= name %>" />
    <meta name="handheldfriendly", content="true" />
    <meta name="mobileoptimized", content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="cleartype", content="on" />
    <meta http-equiv="X-UA-Compatible", content="IE=edge,chrome=1" />

    <!-- Facebook -->
    <meta property="og:side_name" content="<%= name %>" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:url" content="<%= url + '/' + current.path.join('/').replace('index', '') %>" />
    <meta property="og:description" content="<%= description %>" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content="<%= url + '/' + current.path.join('/').replace('index', '') %>" />
    <meta name="twitter:title" content="<%= title %>" />
    <meta name="twitter:description" content="<%= description %>" />
    <meta name="twitter:site" content="@<%= social.twitter %>" />

    <!-- Relevant original Crosswalk Project JS -->
    <script src="/js/utils.js"></script>
    <script src="/js/xwalk.js"></script>
    <script src="/js/versions.js"></script>

  </head>
  <body>
    <!-- If the current page is an index less than two
         directories deep or in the root directory,
         leave it alone so we can do custom layouts.
         Otherwise, provide the header and nav. -->
    <% if(current.source !== 'index' || current.path.length > 2) { %>
      <div class="container">
        <div class="row">
          <% include _includes/nav.ejs %>
        </div>
        <div class="row">
          <% if(current.path.length === 1) { %>
            <%- yield %>
          <% } else { %>
            <%- partial(current.path.reverse()[current.path.length - 1] + "/_nest") %>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <%- yield %>
    <% } %>
    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="grid-1-of-3">
            <a href="/" class="logo">
              <img src="/images/crosswalk-logo-black.svg" class="logo-image">
            </a>
          </div>
          <div class="grid-2-of-3">
            <form class="form">
              <fieldset class="form-buttonGroup">
                <input type="email" placeholder="Add your email, learn Android development" />
                <input type="submit" value="join" class="button button--secondary" />
              </fieldset>
            </form>
          </div>
        </div>
        <div class="row">
          <ul class="grid-1-of-3">
            <li><a href="/documentation">Documentation</a></li>
            <li><a href="/contribute">Contribute</a></li>
            <li><a href="https://crosswalk-project.org/jira/secure/Dashboard.jspa">Issues</a></li>
            <li><a href="https://github.com/crosswalk-project">GitHub</a></li>
            <li><a href="/blog">Blog</a></li>
          </ul>
          <div class="grid-1-of-3">
            <ul class="article-list">
            <% for (slug in public.blog._data) { %>
              <% var article = public.blog._data[slug] %>
                <li class="article-item">
                  <h5 class="article-title"><a href="/blog/<%= slug %>"><%- article.title %></a></h5>
                  <span class="article-meta"><time class="js-vagueTime" datetime="<%- new Date(article.date).toUTCString() %>"><%- article.date %></time></span>
                </li>
                <% break %>
            <% } %>
          </ul>
          </div>
          <div class="grid-1-of-3">
            <!-- <div class="well">
              <p>The updated Intel® XDK is here! Download it now for free. <a href="#">#HTML5</a> <a href="#">http://intel.ly/1mn7fKY</a> <a href="#">pic.twitter.com/3bcWVgZs4a</a></p>
            </div> -->
            <a href="http://twitter.com/<%= social.twitter %>">@<%= social.twitter %></a> on Twitter</a>
          </div>
        </div>
        <div class="row">
          <div class="grid-1-of-2">
            <small>
              Crosswalk is a project from the Intel Open Source Technology Center. Copyright © 2013–2014 Intel Corporation. All rights reserved.
              Privacy policy. *Other names and brands may be claimed as the property of others.
            </small>
          </div>
          <div class="grid-1-of-2 logos">
            <ul class="logos-list">
              <li class="logos-item">
                <a href="https://www.tizen.org/" class="grid-1-of-3 logo">
                  <img class="logo-image" src="/images/icons/wordmark-tizen.png">
                </a>
              </li>
              <li class="logos-item">
                <a href="http://famo.us/" class="grid-1-of-3 logo">
                  <img class="logo-image" src="/images/icons/wordmark-famous.png">
                </a>
              </li>
              <li class="logos-item">
                <a href="http://www.cocos2d-x.org/wiki/Getting_Started_Cocos2d-js" class="grid-1-of-3 logo">
                  <img class="logo-image" src="/images/icons/wordmark-cocos2d.png">
                </a>
              </li>

              <li class="logos-item">
                <a href="https://software.intel.com/en-us/oss" class="grid-1-of-3 logo">
                  <img class="logo-image" src="/images/icons/wordmark-intel.png">
                </a>
              </li>
              <li class="logos-item">
                <a href="http://www.sencha.com/" class="grid-1-of-3 logo">
                  <img class="logo-image" src="/images/icons/wordmark-sencha.png">
                </a>
              </li>
          </div>
      </div>
    </footer>
    <% if(service.analytics) { %>
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '<%= service.analytics %>']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% } %>
    <script src="/js/smoothScroll.js"></script>
    <script src="/js/vagueTime.js"></script>
    <% if(service.prism) { %>
      <script src="/js/prism.js"></script>
      <link async defer href="/css/prism.css" rel="stylesheet"></script>
    <% } %>
  </body>
</html>
