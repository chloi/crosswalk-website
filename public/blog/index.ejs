<div class="container">
  <div class="row">
    <% include ../_includes/nav.ejs %>
  </div>
  <div class="row">
    <ul class="article-list">
      <% for (slug in public.blog._data) { %>
        <% var article = public.blog._data[slug] %>
        <li class="article-item">
          <header class="article-header">
            <h2 class="article-title"><a href="<%= slug %>"><%- article.title %></a></h2>
            <span class="article-meta"><time datetime="<%- new Date(article.date).toUTCString() %>"><%- new Date(article.date).toUTCString() %></time></span>
          </header>
          <div class="article-excerpt">
            <p><%-: partial(slug).replace(/<[^>]*>/g, "") | truncate_words: 50 %> <a href="<%= article.slug %>" title="Read the rest of “<%= article.title %>”">Read more&hellip;</a></p>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
</div>
